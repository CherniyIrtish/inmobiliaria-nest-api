    "rootDir": "./src",
    "noEmit": false,
    "declaration": false,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*.spec.ts",
    "**/*.e2e-spec.ts"
  ]
}